// ��̕����o�[�W�����A��͔z��
function ChangeImageFowardEx(objs)
{
	ascent(i in 0 .. length(objTalkObject))
	{
		Obj_SetValue(objTalkObject[i], "FW", false);
	}
	ascent(i in 0 .. length(objTalkObject))
