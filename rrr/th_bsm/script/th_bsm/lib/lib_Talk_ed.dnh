}

//  �{�^���ҋ@
function WaitNext()
{
	let t = 0;
	loop
	{
		if (t > 2 && (GetVirtualKeyState(VK_OK) == KEY_PUSH || SKIP_FLAG > 45 || t > 1200))
			{ return(1); }
		if (GetVirtualKeyState(VK_OK) == KEY_PUSH || GetVirtualKeyState(VK_OK) == KEY_HOLD)
			{ SKIP_FLAG++; }
		else { SKIP_FLAG = 0; }
		t++;
		yield;
	}
}
