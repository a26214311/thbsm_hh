			ChangeTalkTexture(cutinBoss1, I_NORMAL);
SetTalkEx(cutinBoss1, gettxt("03b_Talk01c.dnh.16",GetAreaCommonData("Config", "AccKey", 0)));
		}
		case(15)
		{
			ChangeTalkTexture(cutinPlayer1, I_DOYA);
