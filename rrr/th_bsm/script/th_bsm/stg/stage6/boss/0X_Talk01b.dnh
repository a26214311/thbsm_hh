}

@Event {
	alternative(GetEventType())
	case(EV_REQUEST_LIFE)		{ SetScriptResult( 0);	}
	case(EV_REQUEST_TIMER)		{ SetScriptResult(-1);	}
	BossEvent();
}

@MainLoop {
	yield;

}

// ���C���^�X�N
task Task_Main()
{
	TBackground();
	wait(180);
	TEndingImage(imgEDMarisa[2], 120);
	//  BGM
	PlayMusic( 17, 120, 60 );
	
	// ��b����
	StartTalk();
	wait(120);

	FuncTalk();
	wait(15);

	//���̃V�[����
	FinishTalk(true);
	SetForbidPlayerShot(true);
	SetForbidPlayerSpell(true);
	
	//  BGM
	PlayMusic( -1, 0, 60 );
	
	wait(180);
	CloseStgScene();
}

